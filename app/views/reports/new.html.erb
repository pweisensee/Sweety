<%= form_for :report, url: reports_path do |f| %>

  <div class="form-group">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date, class: 'form-control', :order => [:day, :month, :year], selected: Date.today.beginning_of_month %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date, class: 'form-control', :order => [:day, :month, :year] %>
  </div>

  <div class="actions">
    <%= f.submit "Go!", class: 'btn btn-success' %>
    <%= link_to "Cancel", :back, class: 'btn btn-default'  %>
  </div>

<% end %>