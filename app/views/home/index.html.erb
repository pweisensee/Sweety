<div class="jumbotron">
  <div class="container">
    <h1>Welcome to Sweety!</h1>
    <h4>This is your personal blood glucose level app!</h4>
    <% if user_signed_in? %>
      <%= link_to 'Enter new blood glucose reading', new_reading_path, class: 'btn btn-success' %>
      <p><%= link_to 'View History', readings_path, class: 'btn btn-primary'  %></p>
    <% else %>
      <p>Please register to begin:</p>
      <p><%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-lg' %></p>
    <% end %>
  </div>
</div>
